<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="768.0" prefWidth="1024.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizapplication.TeacherLogin">

    <!-- Title Text for Teacher Login -->
    <Text fx:id="titleText" layoutX="369.0" layoutY="150.0" style="-fx-font-size: 36px; -fx-font-weight: bold;" text="Teacher Login" />

    <!-- Username Label -->
    <Text fx:id="usernameLabel" layoutX="215.0" layoutY="247.0" style="-fx-font-size: 18px;" text="Username:" />

    <!-- Username Text Field -->
    <TextField fx:id="usernameField" layoutX="350.0" layoutY="228.0" prefWidth="300.0" promptText="Enter your username" />

    <!-- Password Label -->
    <Text fx:id="passwordLabel" layoutX="217.0" layoutY="309.0" style="-fx-font-size: 18px;" text="Password:" />

    <!-- Password Field -->
    <PasswordField fx:id="passwordField" layoutX="350.0" layoutY="290.0" prefWidth="300.0" promptText="Enter your password" />

    <!-- Login Button -->
    <Button fx:id="loginButton" layoutX="350.0" layoutY="418.0" onAction="#handleLogin" prefWidth="300.0" style="-fx-font-size: 18px; -fx-background-color: #4CAF50; -fx-text-fill: white;" stylesheets="@styles.css" text="Login" />

</AnchorPane>
